<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/content"
    app:cardCornerRadius="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/small_userphoto"
        android:layout_height="@dimen/small_userphoto"
        android:id="@+id/content_userphoto"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/cardview_margin"
        android:layout_marginTop="@dimen/cardview_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_username"
        android:layout_toRightOf="@id/content_userphoto"
        android:layout_marginLeft="@dimen/cardview_margin"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_margin="@dimen/cardview_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_text"
        android:layout_below="@id/content_userphoto"/>

        <ImageView

            android:layout_below="@id/content_text"
            android:id="@+id/testphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:background="@drawable/borderline"/>
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:layout_alignBottom="@id/content_text"-->
        <!--android:id="@+id/photo_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

    <!--</android.support.v7.widget.RecyclerView>-->

    </RelativeLayout>
</android.support.v7.widget.CardView>