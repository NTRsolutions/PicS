<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="-2dp"
    android:background="@drawable/shape_rounded_rectangle"
    app:cardCornerRadius="8dp" >

    <!--style="@style/CardViewStyle"-->
    <!--app:cardUseCompatPadding="true"-->
    <!--app:cardPreventCornerOverlap="true"-->
    <!--android:background="@drawable/card_bg"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp">

            <com.android.volley.toolbox.NetworkImageView
                android:padding="3dp"
                android:id="@+id/user_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/press"
                android:clickable="true"
                />

            <!--android:corner_radius="25dp"-->
            <!--android:background="@drawable/shape_google_avatar"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/user_iv"
                android:background="@drawable/press"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/press"
                    android:clickable="true"
                    android:padding="5dp"/>


                <TextView
                    android:id="@+id/timestamp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/press"
                    android:padding="5dp"/>
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="15sp"
            android:background="@drawable/press"
            android:clickable="true"/>

        <com.android.volley.toolbox.NetworkImageView
            android:padding="10dp"
            android:id="@+id/post_iv"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/mainview_selector"
            android:contentDescription=""
            android:scaleType="centerCrop"
            android:clickable="true"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/plus_one_tv"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/mainview_selector"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_favorite_border_black_18dp"
                />

            <TextView
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:id="@+id/collect_tv"
                android:layout_toRightOf = "@id/plus_one_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/mainview_selector"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_star_border_black_18dp"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/add_comment_tv"
                android:drawableLeft="@drawable/ic_comment_black_18dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/mainview_selector"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawablePadding="5dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/add_comment_tv">



            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

    

