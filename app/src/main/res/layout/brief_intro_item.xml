<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/brief_intro_margin">

    <TextView
        android:id="@+id/brief_intro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/brief_intro_tv_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/brief_intro_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/brief_intro_tv_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/brief_intro_item_divider_height"
        android:paddingTop="@dimen/brief_intro_margin"
        android:layout_alignParentBottom="true"
        android:background="@color/gray10" />

</RelativeLayout>