<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justdoit.pics.fragment.mainFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_container">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/header_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/transparent_black_ninty"
        android:gravity="center"
        android:text="header"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="46dp"
        android:gravity="center">
        <TextView
            android:id="@+id/footer_tv"
            android:layout_width="80dp"
            android:padding="14dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_rectangle_transparent_black"
            android:textSize="14sp"
            android:text="test"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="29dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_edit_red"
            android:background="@drawable/editbuttom_press"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:padding="12dp"
            android:contentDescription=""
            android:clickable="true"
            android:layout_gravity="center|right"
            />
    </FrameLayout>
</RelativeLayout>
